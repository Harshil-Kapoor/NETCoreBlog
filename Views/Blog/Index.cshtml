@model IEnumerable<ExploreCalifornia.Models.Post>
@{
    Layout = "_Layout";
}

<h1>Explorer's Blog</h1>

@if (!Model.Any())
{
    <p>Oops!, there are no blogs posted yet...</p>
}
else
{
    <p>
        Below are some of the latest posts from some of our explorers.
    </p>

    <div class="blog-posts">
        @foreach (var post in Model)
        {
            <article class="blog-post">
                <h1>
                    @Html.ActionLink(post.Title, "Post", "Blog",
                        new { year = post.Posted.Year, month = post.Posted.Month, key = post.Key })
                </h1>
                <div class="details">
                    Posted <span>@post.Posted</span> by <span>@post.Author</span>
                </div>
                <div class="content">
                    @post.Body
                </div>
            </article>
        }
    </div>
}

<div>
    @Html.ActionLink("Add a post", "Create", "Blog");
</div>